{
    "name": "project-dev",
    "dockerComposeFile": [
        "docker-compose.yml"
    ],
    "service": "vscode",
    "runServices": [
        "vscode"
    ],
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/workspace",
    "postCreateCommand": "fc-cache -fv && echo 'Dev container setup complete!'",
    "mounts": [
        "type=bind,source=/mnt/c,target=/mnt/c",
        "type=bind,source=/home/nano/.ssh,target=/root/.ssh",
        "type=bind,source=/home/nano/.gitconfig,target=/root/.gitconfig"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                // Git
                "eamodio.gitlens",
                // Other helpers
                "shardulm94.trailing-spaces",
                "stkb.rewrap", // rewrap comments after n characters on one line
                // Other
                "AriqAhmer.overleaf-theme" // Add the Overleaf theme extension
            ],
            "settings": {
                // General settings
                "files.eol": "\n",
                "editor.wordWrap": "on", // Enable word wrapping
                // Theme settings
                "workbench.colorTheme": "Overleaf Theme", // Set the theme as default
                // Latex settings
                "latex-workshop.linting.chktex.enabled": true,
                "latex-workshop.linting.chktex.exec.path": "chktex",
                "latex-workshop.latex.clean.subfolder.enabled": true,
                "latex-workshop.latex.autoClean.run": "onBuilt",
                "latex-workshop.latex.recipe.default": "xelatex",
                "latex-workshop.latex.tools": [
                    {
                        "name": "xelatexmk",
                        "command": "latexmk",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "-xelatex",
                            "-f",
                            "-outdir=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    },
                    {
                        "name": "xelatex_twice",
                        "command": "xelatex",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "-output-directory=%OUTDIR%",
                            "%DOC%"
                        ],
                        "env": {}
                    }
                ],
                "latex-workshop.latex.recipes": [
                    {
                        "name": "xelatex",
                        "tools": [
                            "xelatexmk"
                        ]
                    },
                    {
                        "name": "xelatex (twice)",
                        "tools": [
                            "xelatex_twice",
                            "xelatex_twice"
                        ]
                    }
                ],
                "editor.formatOnSave": true,
                "files.associations": {
                    "*.tex": "latex"
                },
                "latex-workshop.formatting.latexindent.path": "latexindent",
                "latex-workshop.formatting.latexindent.args": [
                    "-c",
                    "%DIR%/",
                    "%TMPFILE%",
                    "-y=defaultIndent: '%INDENT%'"
                ]
            }
        }
    }
}